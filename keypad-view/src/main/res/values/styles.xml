<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Key">
        <!-- Key's text, this will hide the icon -->
        <attr name="keyValue" format="string"/>

        <!-- Key's text color -->
        <attr name="keyTextColor" format="color"/>

        <!-- Key's text size -->
        <attr name="keyTextSize" format="dimension"/>

        <!-- Key's icon, this will hide the text -->
        <attr name="keyIcon" format="reference"/>

        <!-- Key's icon tint -->
        <attr name="keyTint" format="color"/>

        <!-- Key's icon size, this covers both width and height -->
        <attr name="keyIconSize" format="dimension"/>

        <!-- Key's background -->
        <attr name="keyBackground" format="reference"/>

        <!-- Key's wrapper background, this is a wrapper that wraps the text/icon, it is used to set a ripple effect -->
        <attr name="keyWrapperBackground" format="reference"/>
    </declare-styleable>
    <declare-styleable name="KeyPad">
        <!-- Text of the bottom left button -->
        <attr name="leftKeyText" format="string"/>

        <!-- Text of the bottom right button -->
        <attr name="rightKeyText" format="string"/>

        <!-- Icon of the right key, will override the text -->
        <attr name="rightKeyIcon" format="reference"/>

        <!-- Icon of the left key, will override the text -->
        <attr name="leftKeyIcon" format="reference"/>

        <!-- Key's background for all keys -->
        <attr name="keysBackground" format="reference"/>

        <!-- Key's text color for all keys -->
        <attr name="keysTextColor" format="color"/>

        <!-- Tint for all keys that are icons -->
        <attr name="keysIconTint" format="color"/>

        <!-- Size for all keys that are icons -->
        <attr name="keysIconSize" format="dimension"/>

        <!-- Key wrapper layout's background for all keys -->
        <attr name="keysWrapperBackground" format="reference"/>

        <!-- Size of the key's text for all keys -->
        <attr name="keysTextSize" format="dimension"/>

        <!-- Margin for each key -->
        <attr name="keysMargin" format="dimension"/>

        <!-- Margin top for each key -->
        <attr name="keysMarginTop" format="dimension"/>

        <!-- Margin left for each key -->
        <attr name="keysMarginLeft" format="dimension"/>

        <!-- Margin bottom for each key -->
        <attr name="keysMarginBottom" format="dimension"/>

        <!-- Margin right for each key -->
        <attr name="keysMarginRight" format="dimension"/>
    </declare-styleable>
</resources>