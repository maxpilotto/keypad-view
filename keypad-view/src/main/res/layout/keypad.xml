<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/row2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.maxpilotto.keypadview.Key
            android:id="@+id/k1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:keyValue="1"
            app:layout_constraintEnd_toStartOf="@+id/k2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.maxpilotto.keypadview.Key
            android:id="@+id/k2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:keyValue="2"
            app:layout_constraintEnd_toStartOf="@+id/k3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/k1"
            app:layout_constraintTop_toTopOf="parent" />

        <com.maxpilotto.keypadview.Key
            android:id="@+id/k3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:keyValue="3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/k2"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/row2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/row3"
        app:layout_constraintTop_toBottomOf="@+id/row1">

        <com.maxpilotto.keypadview.Key
            android:id="@+id/k4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:keyValue="4"
            app:layout_constraintEnd_toStartOf="@+id/k5"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.maxpilotto.keypadview.Key
            android:id="@+id/k5"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:keyValue="5"
            app:layout_constraintEnd_toStartOf="@+id/k6"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/k4"
            app:layout_constraintTop_toTopOf="parent" />

        <com.maxpilotto.keypadview.Key
            android:id="@+id/k6"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:keyValue="6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/k5"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/row3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/row4"
        app:layout_constraintTop_toBottomOf="@+id/row2">

        <com.maxpilotto.keypadview.Key
            android:id="@+id/k7"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:keyValue="7"
            app:layout_constraintEnd_toStartOf="@+id/k8"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.maxpilotto.keypadview.Key
            android:id="@+id/k8"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:keyValue="8"
            app:layout_constraintEnd_toStartOf="@+id/k9"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/k7"
            app:layout_constraintTop_toTopOf="parent" />

        <com.maxpilotto.keypadview.Key
            android:id="@+id/k9"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:keyValue="9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/k8"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/row4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/row3">

        <com.maxpilotto.keypadview.Key
            android:id="@+id/left"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:keyValue="Left"
            app:layout_constraintEnd_toStartOf="@+id/k0"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.maxpilotto.keypadview.Key
            android:id="@+id/k0"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:keyValue="0"
            app:layout_constraintEnd_toStartOf="@+id/right"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/left"
            app:layout_constraintTop_toTopOf="parent" />

        <com.maxpilotto.keypadview.Key
            android:id="@+id/right"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:keyValue="Right"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/k0"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>